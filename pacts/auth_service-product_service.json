{
  "consumer": {
    "name": "auth_service"
  },
  "interactions": [
    {
      "description": "a request to check if user is in error in product_service",
      "pending": false,
      "providerStates": [
        {
          "name": "user exists and permissions were evaluated"
        }
      ],
      "request": {
        "headers": {
          "Authorization": [
            "Bearer valid.jwt.token"
          ]
        },
        "matchingRules": {
          "header": {
            "Authorization": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            }
          }
        },
        "method": "GET",
        "path": "/user/user-123/permissions/errors"
      },
      "response": {
        "body": {
          "content": {
            "allowed": true,
            "error": null
          },
          "contentType": "application/json",
          "encoded": false
        },
        "headers": {
          "Content-Type": [
            "application/json"
          ]
        },
        "matchingRules": {
          "body": {
            "$.allowed": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$.error": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            }
          }
        },
        "status": 200
      },
      "type": "Synchronous/HTTP"
    }
  ],
  "metadata": {
    "pact-js": {
      "version": "16.0.4"
    },
    "pactRust": {
      "ffi": "0.4.28",
      "models": "1.3.5"
    },
    "pactSpecification": {
      "version": "4.0"
    }
  },
  "provider": {
    "name": "product_service"
  }
}